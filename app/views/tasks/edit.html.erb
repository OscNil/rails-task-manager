<h1>Edit this task</h1>
<%= form_for(@task) do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_area :details %>
<%= f.submit "Update" %>
<% end %>
<%= link_to "Back to list", tasks_path %>
